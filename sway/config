# swayosd-client --monitor eDP-1 --output-volume raise


# --- Volume Controls ---
bindsym XF86AudioRaiseVolume exec swayosd-client --monitor eDP-1 --output-volume raise
bindsym XF86AudioLowerVolume exec swayosd-client --monitor eDP-1 --output-volume lower
# Sink volume toggle mute (show OSD only on eDP-1)
bindsym XF86AudioMute exec swayosd-client --monitor eDP-1 --output-volume mute-toggle

# # --- Brightness Controls ---
bindsym XF86MonBrightnessUp exec swayosd-client --monitor eDP-1 --brightness raise
bindsym XF86MonBrightnessDown exec swayosd-client --monitor eDP-1 --brightness lower

# Source volume toggle mute (show OSD only on eDP-1)
bindsym XF86AudioMicMute exec swayosd-client --monitor eDP-1 --input-volume mute-toggle
# Play/Pause current player (show OSD only on eDP-1)
bindsym XF86AudioPlay exec swayosd-client --monitor eDP-1 --playerctl play-pause
# Next song for current player (show OSD only on eDP-1)
bindsym XF86AudioNext exec swayosd-client --monitor eDP-1 --playerctl next
# Previous song for current player (show OSD only on eDP-1)
bindsym XF86AudioPrev exec swayosd-client --monitor eDP-1 --playerctl previous


for_window [app_id="pavucontrol"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="Gnome-calculator"] floating enable
